<% layout("/layouts/boilerPlate") -%>

<body>
  <div class="row col-8 offset-2">
    <div>
      <h3><%= list.title %></h3>
    </div>
    <div class="card listing-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top show-img card-shadow"
        alt="..."
      />
    </div>

    <div class="card-body">
      <p><b>About:</b> <%= list.description %></p>
      <p><b>Price:</b> <%= list.price.toLocaleString("en-IN") %></p>
      <p><b>Location:</b> <%= list.location %></p>
      <p><b>Country:</b> <%=list.country %></p>
    </div>
  </div>

  <% if(currUser && list.owner._id.equals(currUser._id)){ %>
  <div class="buttons mb-3 col-8 offset-2">
    <form
      method="get"
      action="http://localhost:5050/listings/<%= list.id %>/edit"
    >
      <button class="btn btn-success" type="submit">Edit</button>
    </form>
    <form
      method="post"
      action="http://localhost:5050/listings/<%=list.id %>?_method=Delete"
    >
      <button class="btn btn-danger" type="submit">Delete</button>
    </form>
  </div>
  <% } %>

  <div class="col-8 offset-2 mb-3">
    <% if(currUser){ %>
    <hr />
    <h3>Leave a Review</h3>
    <form
      method="post"
      action="/listings/<%= list.id %>/reviews"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>

        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="0"
            checked
            aria-label="No rating."
          />

          <input type="radio" id="rate1" name="review[rating]" value="1" />
          <label for="rate1">1 star.</label>

          <input type="radio" id="rate2" name="review[rating]" value="2" />
          <label for="rate2">2 stars.</label>

          <input type="radio" id="rate3" name="review[rating]" value="3" />
          <label for="rate3">3 stars.</label>

          <input type="radio" id="rate4" name="review[rating]" value="4" />
          <label for="rate4">4 stars.</label>

          <input type="radio" id="rate5" name="review[rating]" value="5" />
          <label for="rate5">5 stars.</label>

          <span class="starability-focus-ring"></span>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          id="comment"
          cols="50"
          rows="5"
          name="review[comment]"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Please add Comment to review</div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>
    <hr />

    <% if(list.review.length > 0){ %>
    <h4>All Reviews</h4>
    <div class="row">
      <% for(review of list.review){ %>
      <div class="card col-5 mb-3 ms-3 review-card">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>

          <p
            class="starability-result card-text"
            data-rating="<%= review.rating%>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
          <form
            method="post"
            action="/listings/<%= list.id %>/reviews/<%= review._id %>?_method=Delete"
          >
            <button type="submit" class="btn btn-sm">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
    <hr />
    <% } %>

    <div>
      <h3>Where you'll be</h3>
      <div id="map"></div>
      <script>
        mapboxgl.accessToken =
          "pk.eyJ1IjoiZGVsdGEtc3R1ZHVlbnQiLCJhIjoiY2xvMDk0MTVhMTJ3ZDJrcGR5ZDFkaHl4ciJ9.Gj2VU1wvxc7rFVt5E4KLOQ";
        const map = new mapboxgl.Map({
          container: "map", // container ID
          style: `mapbox://styles/mapbox/streets-v12`,
          center: [-74.5, 40], // starting position [lng, lat]. Note that lat must be set between -90 and 90
          zoom: 9, // starting zoom
        });
      </script>
    </div>
  </div>
</body>
