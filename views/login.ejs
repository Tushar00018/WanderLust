<% layout("/layouts/boilerPlate") -%>

<body>
  <div class="row mt-3">
    <h1 class="col-8 mb-5">Login on WanderLust</h1>
    <div class="col-8">
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div>
          <label class="form-label" for="username">Username</label>
          <input
            name="username"
            type="text"
            class="form-control"
            id="username"
            required
          />
        </div>

        <div>
          <label class="form-label" for="Password">Password</label>
          <input
            name="password"
            type="Password"
            class="form-control"
            id="Password"
            required
          />
        </div>
        <button class="btn btn-success mt-3" type="submit">Login</button>
      </form>
      <a href="/signup"><button class="btn btn-warning mt-3">SignUp</button></a>
    </div>
  </div>
</body>
